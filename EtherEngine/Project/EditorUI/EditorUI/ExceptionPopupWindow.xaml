<Window x:Class="EditorUI.ExceptionPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorUI"
        mc:Ignorable="d"
        Title="ExceptionPopUpWindow" Height="200" Width="300">
   <Grid>
      <!-- グリッド定義 -->
      <Grid.RowDefinitions>
         <RowDefinition Height="*"/>
         <RowDefinition Height="20"/>
      </Grid.RowDefinitions>
      
      <!-- テキスト表示 -->
      <TextBlock Grid.Row="0" TextWrapping="WrapWithOverflow" Text="{Binding ShowText.Value}"></TextBlock>

      <!-- ボタン表示 -->
      <Button Grid.Row="1" Content="OK"></Button>
   </Grid>
</Window>
