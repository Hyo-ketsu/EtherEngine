<UserControl x:Class="EditorUI.SceneViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:av="https://github.com/Dirkster99/AvalonDock"
        xmlns:local="clr-namespace:EditorUI"
        mc:Ignorable="d">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="auto"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <!-- シーンメニュー表示 -->
      <Menu Grid.Row="0">
         <MenuItem Header="SceneMenu"></MenuItem>
      </Menu>

         <!-- シーン表示部分 -->
      <WindowsFormsHost Grid.Row="1" MinWidth="10" MinHeight="10" SizeChanged="WindowsFormsHostSizeChanged" x:Name="WindowsFormsHost">
         <wf:Panel x:Name="SceneViewWindowForms"/>
      </WindowsFormsHost>
   </Grid>
</UserControl>
