<UserControl x:Class="EditorUI.LanguageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorUI"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
   <UserControl.DataContext>
      <local:LanguageButtonVM/>
   </UserControl.DataContext>
   <!-- 言語設定 -->
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="auto"/>
         <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>

      <icon:PackIconVaadinIcons Kind="Globe" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0"/>
      <ComboBox Grid.Column="1" ItemsSource="{Binding Language.Item}" SelectedItem="{Binding Language.Select}" Margin="2,0,0,0"/>
   </Grid>
</UserControl>
