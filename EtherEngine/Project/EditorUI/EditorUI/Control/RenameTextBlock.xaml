<UserControl x:Class="EditorUI.RenameTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorUI"
             mc:Ignorable="d"
             KeyDown="RenameStartKeyDown"
             MouseDoubleClick="RenameStartMouse"
             Height="auto" Width="auto"
             MouseEnter="RenameMouseEnter"
             MouseLeave="RenameMouseLeave">
   <Grid>
      <TextBlock x:Name="Show" Text="{Binding ShowText.Value}"/>
      <TextBox x:Name="Rename" Text="{Binding ShowText.Value}" CaretBrush="Black"/>
   </Grid>
</UserControl>
